@{
    ViewData["Title"] = "Ana Sayfa";
    var isAuthenticated = User.Identity != null && User.Identity.IsAuthenticated;
    var loginUrl = Url.Action("Index", "Signin");
    var userName = isAuthenticated ? User.Identity.Name : "";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-12">
                <h1 class="display-4 fw-bold mb-3">
                    Rezervasyon Sistemine <span class="text-gradient">Hoş Geldiniz</span>
                    @if (isAuthenticated && !string.IsNullOrEmpty(userName))
                    {
                     <p>   <span class="fw-bold">@userName!</span> </p>
                    }
                </h1>
                <p class="lead text-muted mb-4">Kütüphane, proje odası ve konferans salonu rezervasyonlarınızı kolayca yapabilirsiniz.</p>
                <div class="d-grid gap-2 d-sm-flex">
                    <a href="#reservationSection" class="btn btn-primary btn-lg px-4 rounded-pill scroll-btn">Rezervasyon Yap</a>
                    <a href="@(isAuthenticated ? Url.Action("List", "Rezervasyon") : loginUrl)" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">Rezervasyonlarım</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Resource Cards Section -->
<section class="py-5" id="reservationSection">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Rezervasyon Yapabileceğiniz Alanlar</h2>
            <p class="lead text-muted">İhtiyacınıza göre bir alan seçin ve hemen rezervasyon yapın</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card resource-card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper mb-4">
                            <i class="fas fa-book"></i>
                        </div>
                        <h3 class="card-title fw-bold">Kütüphane</h3>
                        <p class="card-text text-muted">Sessiz ve verimli bir çalışma ortamı. Kaynaklara erişim için ideal alan.</p>
                        <a href="@(isAuthenticated ? Url.Action("Kütüphane", "Rezervasyon") : loginUrl)" class="stretched-link"></a>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center pb-4">
                        <span class="btn btn-primary rounded-pill">Rezervasyon Yap</span>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card resource-card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper mb-4">
                            <i class="fas fa-users"></i> @* Proje Odası için ikon güncellendi *@
                        </div>
                        <h3 class="card-title fw-bold">Proje Odası</h3>
                        <p class="card-text text-muted">Takım çalışmaları ve bireysel projeler için donanımlı alan.</p> @* Açıklama güncellendi *@
                        <a href="@(isAuthenticated ? Url.Action("ProjeOdasi", "Rezervasyon") : loginUrl)" class="stretched-link"></a>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center pb-4">
                        <span class="btn btn-primary rounded-pill">Rezervasyon Yap</span>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card resource-card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper mb-4">
                            <i class="fas fa-microphone-alt"></i>
                        </div>
                        <h3 class="card-title fw-bold">Konferans Salonu</h3>
                        <p class="card-text text-muted">Sunum, seminer ve etkinlikler için geniş ve teknolojik altyapılı salon.</p>
                        <a href="@(isAuthenticated ? Url.Action("KonferansSalonu", "Rezervasyon") : loginUrl)" class="stretched-link"></a>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center pb-4">
                        <span class="btn btn-primary rounded-pill">Rezervasyon Yap</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 mt-5">
    <div class="container">
        <div class="text-center mb-5">
            
        </div>
        
        <div class="row g-4">
            <div class="col-md-6">
                <div class="text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3 class="fw-bold h5">7/24 Erişim</h3>
                    <p class="text-muted">İstediğiniz zaman, istediğiniz yerden rezervasyon yapabilirsiniz.</p>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-bell"></i>
                    </div>
                    <h3 class="fw-bold h5">Bildirim Sistemi</h3>
                    <p class="text-muted">Rezervasyonlarınız hakkında anında bildirim alın.</p>
                </div>
            </div>
        </div>
    </div>
</section>