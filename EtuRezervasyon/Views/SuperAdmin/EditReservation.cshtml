@model EtuRezervasyon.Models.Reservation

@{
    ViewData["Title"] = "Rezervasyon Düzenle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="EditReservation" method="post" class="card card-body">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Başlangıç Zamanı</label>
        <input type="datetime-local" asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Bitiş Zamanı</label>
        <input type="datetime-local" asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Durum</label>
        <select asp-for="Status" class="form-select">
            <option value="pending">Beklemede</option>
            <option value="approved">Onaylandı</option>
            <option value="rejected">Reddedildi</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <a href="/SuperAdmin/Index" class="btn btn-secondary w-100 text-center">İptal</a>
        <button type="submit" class="btn btn-primary w-100">Kaydet</button>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}